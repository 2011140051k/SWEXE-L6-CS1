<% @tweets.each do |t| %>
    <P>
    <%= t.message %>
    <%= link_to '削除', tweet_path(t.id), method: :delete %>
    <% if current_user %>
        <% if t.likes.count == 0 %>
            <%= link_to 'いいね', likes_path(tweet_id: t.id), method: :post %>
        <% else %>
            <%= link_to 'いいね削除', like_path(t), method: :delete %>
        <% end %>
    <% end %>
    </P>
<% end %>
<% if current_user %>
    <%= link_to '新規作成', new_tweet_path %>
<% end %>

